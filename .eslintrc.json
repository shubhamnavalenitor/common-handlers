{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-console": "error",
        "no-undef": "error",
        "no-unused-vars": "error",
        "for-direction": "error",
        "no-const-assign": "error",
        "no-constant-condition": "error",
        "no-cond-assign": "error",
        "no-async-promise-executor": "error",
        "no-empty": "error",
        "no-useless-catch": "error"
    }
}
